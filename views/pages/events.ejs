<div class="jumbotron text-center">
    <h1>All Events</h1>

</div>
<%  if (success.length > 0) { %>
    <div class="alert alert-success animated bounce infinite">
        <%= success %>
    </div>
    <% } %>
        <table class="table table-border table-hover table-striped">
            <thead>
                <tr>
                    <th>Event Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% for (var event of events) { %>
                    <tr>
                        <td>
                            <%= event.name %>
                        </td>
                        <td>
                            <%= event.description %>
                        </td>
                        <td>
                            <a href="/events/<%= event.slug %>" class="btn btn-sm btn-success hoverable">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </a>
                            <a href="/events/<%= event.slug %>/edit" class="btn btn-sm btn-primary hoverable">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <a href="/events/<%= event.slug %>/delete" class="btn btn-sm btn-danger hoverable">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>

                    <% } %>
            </tbody>
        </table>
        <script>
            setTimeout(function () {
                document.querySelector(".alert").style.visibility = "hidden";
            }, 2000);
        </script>